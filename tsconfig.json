{
  "compilerOptions": {
    "outDir": "build",
    /* Basic Options */
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["app/**/*", "app/*", "config.json"],
  "exclude": ["node_modules"]
}
